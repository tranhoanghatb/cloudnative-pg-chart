apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: storage-shrinkage
spec:
  instances: 2

  storage:
    size: 2Gi
    storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    resizeInUseVolumes: false

  walStorage:
    size: 2Gi
    storageClass: ${E2E_DEFAULT_STORAGE_CLASS}
    resizeInUseVolumes: false

  tablespaces:
    - name: alpha
      storage:
        resizeInUseVolumes: false
        size: 2Gi
        storageClass: ${E2E_DEFAULT_STORAGE_CLASS}


